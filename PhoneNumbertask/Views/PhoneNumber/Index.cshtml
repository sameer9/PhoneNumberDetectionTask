@model PhoneNumbertask.Models.PhoneNumberModel

<h1>Phone Number Detection</h1>

<form asp-controller="PhoneNumber" asp-action="Convert" method="post" enctype="multipart/form-data">

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="inputText">Enter text:</label>
                <input type="text" class="form-control" id="inputText" name="InputText" placeholder="Enter text..." value="@Model.InputText">
                <span asp-validation-for="InputText" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6 mt-4">
            <div class="form-group">
                <b><label for="inputText">Or &nbsp;&nbsp;</label></b>

                <label for="FileContent">Choose file:</label>
                <input type="file" class="form-control-file" id="FileContent" value="@Model.FileContent" onchange="uploadFile()" name="FileContent">
                @* <span asp-validation-for="FileContent" class="text-danger"></span> *@
              
                <button type="submit" class="btn btn-primary">Check</button>
            </div>
        </div>
    </div>

</form>

@if (!string.IsNullOrEmpty(Model.ConvertedText))
{
    <div class="mt-3">
        <h3>Converted text:</h3>
        <p>@Model.ConvertedText</p>
        <h3>Validation result:</h3>
        <p>@Model.ValidationResult</p>
    </div>
}
